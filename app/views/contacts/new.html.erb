<div class="container">
  <div class="row">
    <div class="col 12">
      <h1 class="text-center">New Contact</h1>
    </div>
  </div>
</div>

<div class="container mt-3">

  <div class="row justify-content-center">
    <div class="col 8">

      <%= form_with model: @contact do |f| %>
        <div class="form-group mb-3">
          <%= f.label :full_name %>
          <%= f.text_field :full_name %>
        </div>

        <div class="form-group mb-3">
          <%= f.label :nickname %>
          <%= f.text_field :nickname %>
        </div>

        <div class="form-group mb-3">
          <%= f.label :contact_email %>
          <%= f.text_field :contact_email %>
        </div>

        <div class="form-group mb-3">
          <%= f.label :birthday %>
          <%= f.date_field :birthday %>
        </div>

        <div class="form-group mb-3">
          <%= f.fields_for :phone_numbers do |phone_number_form| %>
            <%= phone_number_form.text_field :number %>
            <%= phone_number_form.select :kind, PhoneNumber.kinds.keys %>
          <% end %>
        </div>

        <div class="form-group mb-3">
          <%= f.label :addresses %>
          <%= f.fields_for :addresses do |address_form| %>
            <%= address_form.text_field :street %>
            <%= address_form.text_field :city %>
            <%= address_form.text_field :state %>
            <%= address_form.text_field :postal_code %>
          <% end %>
        </div>

        <div class="d-flex justify-content-center">
          <%= f.submit "Create Contact", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
