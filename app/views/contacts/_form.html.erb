<%= form_with(model: contact, local: true) do |form| %>
  <div class="form-group">
    <%= form.label :full_name %>
    <%= form.text_field :full_name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :nickname %>
    <%= form.text_field :nickname, class: "form-control" %>

  </div>

  <div class="form-group">
    <%= form.label :contact_email %>
    <%= form.email_field :contact_email, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :birthday %>
    <%= form.date_select :birthday, start_year: 1900, end_year: Time.now.year, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :phone_numbers %>
    <%= form.fields_for :phone_numbers do |phone_number_form| %>
      <div class="d-flex">
        <%= phone_number_form.text_field :number, class: "form-control" %>
        <%= phone_number_form.select :kind, PhoneNumber.kinds.keys, {}, class: "form-control" %>
      </div>
    <% end %>

    <div class="d-flex justify-content-end">
      <%= link_to_add_association "Add phone number", form, :phone_numbers, class: "btn btn-secondary" %>

  <div class="form-group">
    <%= form.label :addresses %>
    <%= form.fields_for :addresses do |address_form| %>
      <div class="d-flex">
        <%= address_form.text_field :street, class: "form-control" %>
        <%= address_form.text_field :city, class: "form-control" %>
        <%= address_form.text_field :state, class: "form-control" %>
        <%= address_form.text_field :postal_code, class: "form-control" %>
        <%= address_form.select :kind, Address.kinds.keys, {}, class: "form-control" %>
      </div>
  </div>
